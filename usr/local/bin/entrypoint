#!/bin/bash
set -e

if [[ "${1}" == 'apache2' ]]; then
    if [[ -z ${HTTP_ENABLE} -a -z ${HTTPS_ENABLE} ]]; then
        echo "HTTP & HTTPS not enabled, not starting httpd"
        exit 0
    else 
        if [[ -z ${HTTP_ENABLE} ]]; then
            a2dissite http
        fi
        
        if [[ -z ${HTTPS_ENABLE} ]]; then
            a2dissite https
        fi
        
        exec /usr/sbin/apache2ctl -DFOREGROUND
    fi
fi

exec "$@"

